{% if page.permalink == '/' %}
  <div class="hero-section">
    <div class="hero-overlay"></div>
    <div class="hero-content">
      <h1>
        {{ site.first_name }}
        {{ site.last_name }}
      </h1>
      <p class="hero-subtitle">{{ page.subtitle }}</p>
      <div class="hero-buttons">
        <a href="{{ '/projects/' | relative_url }}" class="btn btn-primary">View Projects</a>
        <a href="{{ '/cv/' | relative_url }}" class="btn btn-outline-light">Resume</a>
      </div>
    </div>
  </div>

  <style>
    /*
     * Hero section styling
     * To use your own background image, place an image at assets/img/hero-bg.jpg
     * or change the background-image URL below to point to your image
     */

    /* Set the background color for the entire page to match hero */
    body {
      background-color: var(--global-bg-color) !important;
    }

    /* Match all about page elements to hero background color */
    .container,
    .post,
    .post-header,
    .profile,
    article,
    .social,
    .more-info,
    h1, h2, h3, h4, h5, h6,
    .navbar {
      background-color: var(--global-bg-color) !important;
    }

    /* Adjust container margin to work better with full-height hero */
    .container[role="main"] {
      margin-top: 0 !important;
      padding-top: 2rem;
    }
    .hero-section {
      position: relative;
      height: 100vh;
      min-height: 100vh;
      /* Use CSS variable for background color to support dark mode */
      background-color: var(--global-bg-color);
      /* Previous gradient background (commented out) */
      /* background: linear-gradient(135deg, #4a89dc 0%, #3a70c0 100%); */
      /* Uncomment the line below to use an image */
      /* background-image: url('{{ site.baseurl }}/assets/img/hero-bg.jpg'); */
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
      margin-bottom: 0;
      display: flex;
      align-items: center;
      justify-content: center;
      text-align: center;
      color: var(--global-text-color); /* Use CSS variable for text color to support dark mode */
    }

    .hero-overlay {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: transparent; /* Remove the overlay to match the rest of the page */
    }

    .hero-content {
      position: relative;
      z-index: 1;
      max-width: 800px;
      padding: 0 20px;
    }

    .hero-content h1 {
      font-size: 3.5rem;
      font-weight: 700;
      margin-bottom: 1rem;
      text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.1); /* Subtle shadow for both light and dark modes */
      color: var(--global-text-color);
    }

    .hero-subtitle {
      font-size: 1.5rem;
      margin-bottom: 2rem;
      text-shadow: none;
      color: var(--global-text-color-light);
    }

    .hero-buttons {
      display: flex;
      justify-content: center;
      gap: 1rem;
    }

    .hero-buttons .btn {
      padding: 0.75rem 1.5rem;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 1px;
      border-radius: 4px;
      transition: all 0.3s ease;
    }

    .hero-buttons .btn-primary {
      background-color: var(--global-theme-color);
      border-color: var(--global-theme-color);
      color: var(--global-hover-text-color);
    }

    .hero-buttons .btn-primary:hover {
      background-color: var(--global-hover-color);
      border-color: var(--global-hover-color);
      color: var(--global-hover-text-color);
    }

    .hero-buttons .btn-outline-light {
      color: var(--global-text-color);
      border-color: var(--global-text-color);
      background-color: transparent;
    }

    .hero-buttons .btn-outline-light:hover {
      background-color: var(--global-hover-color);
      color: var(--global-hover-text-color);
      border-color: var(--global-hover-color);
    }

    /*
     * Utility class for applying grayscale filter to any element
     * Usage examples:
     * 1. Add class to an image: <img src="image.jpg" class="grayscale">
     * 2. Add class to a div containing content: <div class="grayscale">content</div>
     * 3. Add class to the hero section for grayscale effect: <div class="hero-section grayscale">
     */
    .grayscale {
      filter: grayscale(100%);
    }

    @media (max-width: 768px) {
      .hero-section {
        height: 60vh;
        min-height: 400px;
      }

      .hero-content h1 {
        font-size: 2.5rem;
      }

      .hero-subtitle {
        font-size: 1.2rem;
      }

      .hero-buttons {
        flex-direction: column;
        gap: 0.5rem;
      }
    }
  </style>
{% endif %}
